<main>
    <a href="/teacher/viewPanel" class="btn btn-success back">Back </a>
    <div class="form-container">
<form id="AddStudent" action="/teacher/viewPanel" method="post">

    <div class="login">
        <h3>Add Student</h3>
    </div>

    
    <div id="error"></div>

    <div class="fields">

        <div class="form-control">
            <label for="roll_number">Roll Number</label>
            <input type="text" id="roll_number" name="roll_number">
        </div>

        <div class="form-control">
            <label for="name">name</label>
            <input type="text" id="name" name="name">
        </div>

        <div class="form-control">
            <label for="date_of_birth">Date of Birth</label>
            <input type="date" id="date_of_birth" name="date_of_birth" placeholder="yyyy-mm-dd">
        </div>

        <div class="form-control">
            <label for="score">Score</label>
            <input type="text" id="score" name="score">
        </div>

    </div>

    <div class="login">
        <button class="btn btn-success" type="submit">Add Student</button>
    </div>

    <!-- <div class="login">
        <a href class="btn btn-success" (click)="handleAddStudent()">Add Student</button>
       
    </div> -->
    </form>
    </div>

</main>

